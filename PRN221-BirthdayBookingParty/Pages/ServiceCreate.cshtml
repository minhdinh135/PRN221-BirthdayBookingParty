@page
@model PRN221_BirthdayBookingParty.Pages.ServiceCreateModel
@{
        <div class="container mt-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Create Service</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label for="ServiceName" class="form-label">Service Name:</label>
                            <input type="text" class="form-control" asp-for="ServiceName" required />
                            <span asp-validation-for="ServiceName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="PackageId" class="form-label">Package Type:</label>
                            <select class="form-control" asp-for="PackageId" required>
                                <option value="">Select Type</option>
                            @foreach (var package in Model.Packages)
                            {
                                        <option value="@package.PackageId">@package.PackageType</option>
                            }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Price" class="form-label">Price($):</label>
                            <input type="number" class="form-control" asp-for="Price" required />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-page="./ServiceManagement" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
}
