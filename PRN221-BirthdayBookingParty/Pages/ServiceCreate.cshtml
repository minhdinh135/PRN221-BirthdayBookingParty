@page "/Service/Create"
@model PRN221_BirthdayBookingParty.Pages.ServiceCreateModel

<br>
<h1>Create New Service</h1>
<br>

<form method="post">
    <div class="form-group">
        <label for="ServiceName">Service Name:</label>
        <input type="text" class="form-control" asp-for="ServiceName" required>
    </div>

    <div class="form-group">
        <label for="PackageId">Package Type:</label>
        <select class="form-control" asp-for="PackageId" required>
            <option value="">Select Type</option>
            @foreach (var package in Model.Packages)
            {
                <option value="@package.PackageId">@package.PackageType</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" class="form-control" asp-for="Price" required>
    </div>

    <br>
    <div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="./ServiceManagement">Back to List</a>
    </div>
    
</form>
