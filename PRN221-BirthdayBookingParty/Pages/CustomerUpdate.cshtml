@page
@model NguyenHoangLamRazorPages.Pages.CustomerUpdateModel
@{
	<div class="container mt-4">
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Customer Update</h3>
			</div>
			<div class="card-body">
				<form method="POST">
				<div class="mb-3">
					<input type="hidden" asp-for="UserId" class="form-control"/>
					<label for="FullName" class="form-label">FullName</label>
					<input type="text" asp-for="FullName" class="form-control" required />
				</div>

				<div class="mb-3">
					<label for="Telephone" class="form-label">Telephone</label>
					<input type="tel" asp-for="Telephone" class="form-control" required />
				</div>

				<div class="mb-3">
					<label for="HomeAddress" class="form-label">Home Address:</label>
					<input type="text" asp-for="HomeAddress" class="form-control" required />
				</div>

				<div class="mb-3">
					<label for="EmailAddress" class="form-label">EmailAddress</label>
					<input type="email" asp-for="EmailAddress" class="form-control" required />
				</div>

				<div class="mb-3">
					<label for="Birthday" class="form-label">Birthday</label>
					<input type="date" asp-for="Birthday" class="form-control" />
				</div>

				<button type="submit" class="btn btn-danger">Update</button>
				<a asp-page="/CustomerManagement" class="btn btn-primary">Cancel</a>                 
			</form>
							</div>
						</div>
					</div>
}
