@page
@model PRN221_BirthdayBookingParty.Pages.RegisterModel

<div class="container mt-4">
    <br>
<h2>Create New Account</h2>
<br>
<br>
    <form method="POST" id="register-form">

        <div class="mb-3">
            <label for="fullName" class="form-label">Fullname</label>
            <input type="text" name="fullName" id="fullName" class="form-control" required />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Telephone</label>
            <input type="tel" name="phone" id="phone" class="form-control" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" id="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" name="address" id="address" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="birthday" class="form-label">Birthday</label>
            <input type="datetime-local" name="birthday" id="birthday" class="form-control" required/>
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="confirm-password" class="form-label">Confirm Password</label>
            <input type="password" name="confirmPassword" id="confirm-password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
        <a asp-page="/Login" class="btn btn-primary">Cancel</a>

    </form>
</div>

<script>
    const form = document.getElementById('register-form');

    form.addEventListener('submit', (e) => {
        e.preventDefault();

        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirm-password').value;

        if (password !== confirmPassword) {
            alert('Confirm password wrong!');
            return;
        }
        form.submit();
    });
</script>
