@page
@model PRN221_BirthdayBookingParty.Pages.RoomDeleteModel
@{
        <div class="container mt-4">
                        <div class="card">
                            <div class="card-body">
                                <h1 class="card-title">Delete Confirmation</h1>
                                        <p class="card-text">Are you sure you want to delete room with number: <strong>@Model.room.RoomId</strong>?</p>
                                <form method="POST">
                                            <button asp-route-id="@Model.room.RoomId" type="submit" class="btn btn-danger">OK</button>
                                        <a asp-page="/RoomManagement" class="btn btn-primary">Cancel</a>
                                </form>
                            </div>
                        </div>
         </div>
}
