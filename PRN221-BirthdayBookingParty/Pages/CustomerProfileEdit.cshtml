@page
@model DinhTranNhatMinhRazorPages.Pages.CustomerProfileEditModel
@{
    <div class="container mt-4">
<h2>Edit Profile</h2>
    <form method="POST">
        <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input type="text" name="User.FullName" asp-for="User.FullName" id="fullName" class="form-control" required />
            <span asp-validation-for="User.FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" name="User.Phone" asp-for="User.Phone" id="phone" class="form-control" required />
            <span asp-validation-for="User.Phone" class="text-danger"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="tel" name="User.Address" asp-for="User.Address" id="address" class="form-control" required />
            <span asp-validation-for="User.Address" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label for="birthday" class="form-label">Birthday</label>
            <input type="date" name="User.Birthday" asp-for="User.Birthday" id="birthday" class="form-control" required />
            <span asp-validation-for="User.Birthday" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="User.Password" asp-for="User.Password" value="@Model.User.Password" id="password" class="form-control" required />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/ProfileCustomer" class="btn btn-primary">Cancel</a>                 

    </form>
    </div>
}
