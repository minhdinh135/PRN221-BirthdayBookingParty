@page
@model DinhTranNhatMinhRazorPages.Pages.CustomerProfileEditModel
@{
    <div class="container mt-4">
<h2>Edit Profile</h2>
    <form method="POST">
            <input type="hidden" asp-for="Email" class="form-control"/>
            <div class="mb-3">
                <label for="fullName" class="form-label">Fullname</label>
                <input type="text" asp-for="FullName"  class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Telephone</label>
                <input type="tel" asp-for="Phone" class="form-control" required />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" asp-for="Address" class="form-control" required />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="birthday" class="form-label">Birthday</label>
                <input type="datetime-local" asp-for="Birthday" class="form-control" required />
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="/ProfileCustomer" class="btn btn-primary">Cancel</a>                 

    </form>
    </div>
}
