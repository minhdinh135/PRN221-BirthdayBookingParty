@page
@model PRN221_BirthdayBookingParty.Pages.SendEmailModel
@{
    ViewData["Title"] = "Send Email";
}

<div class="container mt-4">
    <div class="card">
    <div class="card-header">
        <h3 class="card-title">Send Email</h3>
    </div>
    <div class="card-body">

    <form method="post">
        <div class="mb-3">
            <input type="hidden" asp-for="UserId" class="form-control" value="@Model.UserId" />
        </div>

        <div class="mb-3">
            <label for="To" class="form-label">To:</label>
            <input type="email" asp-for="To" class="form-control" disabled  />
        </div>

        <div class="mb-3">
            <label for="Subject" class="form-label">Subject:</label>
            <input type="text" asp-for="Subject" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="Body" class="form-label">Message Body:</label>
            <textarea asp-for="Body" class="form-control" required></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Send Email</button>
        <a asp-page="/BookingList" class="btn btn-secondary">Cancel</a>
    </form>
    </div>
    </div>
</div>
