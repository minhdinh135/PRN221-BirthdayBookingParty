@page
@model PRN221_BirthdayBookingParty.Pages.ServiceListModel
@{
	var isCustomer = HttpContext.Session.Keys.Contains("CUSTOMER");

	<table class="table table-striped table-bordered">
		<thead>
			<tr>
				@if (!isCustomer)
				{
					<th>ServiceId</th>
				}
				<th>ServiceName</th>
				<th>PackageId</th>

				@if (!isCustomer)
				{
					<th colspan="2">Action</th>
				}
			</tr>
		</thead>

		<tbody>
			@foreach (var service in Model.Services)
			{
				<tr>
					@if (!isCustomer)
					{
						<td>@service.ServiceId</td>
					}
					<td>@service.ServiceName</td>
					<td>@service.PackageId</td>

					@if (!isCustomer)
					{
						<td><a class="btn btn-primary" asp-page="/PackageUpdate/@service.PackageId">Update</a></td>
						<td><a class="btn btn-danger" asp-route-id="@service.PackageId" asp-page="/PackageDelete">Delete</a></td>
					}

				</tr>
			}
		</tbody>
	</table>
}
