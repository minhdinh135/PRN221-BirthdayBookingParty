@page
@model PRN221_BirthdayBookingParty.Pages.BookingListDetailsModel
@{
    var isHost = HttpContext.Session.Keys.Contains("HOST");
    var isCustomer = HttpContext.Session.Keys.Contains("CUSTOMER");
    var canEditFeedback = Model.Status == "Done";
    var cannotEditPartyTimeAndServiceAndCapacity = Model.Status == "Accept";
    var cannotEditAnything = Model.Status == "Deny";
    var canUpdate = Model.Status == "Pending";

        <div class="container mt-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Booking Details</h3>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <input type="hidden" asp-for="BookingId" class="form-control" />
                        <input type="hidden" asp-for="RoomId" class="form-control"/>

                        <div class="mb-3">
                            <label asp-for="BookingDate" class="form-label">Booking Date:</label>
                            <input type="date" asp-for="BookingDate" class="form-control" disabled/>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PartyDateTime" class="form-label">Party Time:</label>
                        @if (!canUpdate || !isCustomer)
                        {
                                    <input type="date" asp-for="PartyDateTime" class="form-control" disabled />
                        }
                        else
                        {
                                    <input type="date" asp-for="PartyDateTime" class="form-control" />
                        }
                        </div>

                        <div class="mb-3">
                            <label asp-for="RoomId" class="form-label">Room Capacity:</label>
                            <select class="form-control" asp-for="RoomId" required>
                                <option value="">Select Capacity</option>
                            @foreach (var room in Model.Rooms)
                            {
                                        <option value="@room.RoomId">@room.Capacity - $@room.RoomPrice</option>
                            }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedServices" class="form-label">Services</label>
                            <br>
                            <select asp-for="SelectedServices" asp-items="Model.Services.ConvertAll(a => {
                            return new SelectListItem()
                            {
                                Text = a.ServiceName.ToString() + '-' + '$' + a.Price.ToString(),
                                Value = a.ServiceId.ToString(),
                                Selected = false
                            };
                        })" multiple="multiple" class="listbox">
                            </select>
                        </div>

                    @* Commented out sections from BookingCreateModel *@
                    @* ... (code for Status, Feedback, etc.) ... *@

                    @* Removed code for Packages and other elements from BookingCreateModel *@

                        <button type="submit" class="btn btn-danger">Update</button>
                        <a asp-page="/BookingList" class="btn btn-primary">Back</a>
                    </form>
                </div>
            </div>
        </div>

        <script src="~/js/dropdown.js"></script>
}
