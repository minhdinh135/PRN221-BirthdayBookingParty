@page
@model PRN221_BirthdayBookingParty.Pages.ServiceUpdateModel
@{
        <div class="container mt-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Service Update</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST">
                                  <input type="hidden" asp-for="ServiceId" class="form-control" required />

                            <div class="mb-3">
                                    <label for="ServiceName" class="form-label">Service Name</label>
                                        <input type="text" asp-for="ServiceName" class="form-control" required />
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                            </div>

                                <div class="form-group">
                                     <label for="PackageId">Package Type:</label>
                                    <select class="form-control" asp-for="PackageId" required>
                                        <option value="">Select Type</option>
                                    @foreach (var package in Model.Packages)
                                     {
                                        <option value="@package.PackageId">@package.PackageType</option>
                                        }
                                    </select>
                                </div>
                    <div class="mb-3">
                        <label for="Price" class="form-label">Price:</label>
                        <input type="text" asp-for="Price" class="form-control" required />
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </div>
                                    <br>
                                <button type="submit" class="btn btn-primary">Update</button>
                                <a asp-page="/ServiceManagement" class="btn btn-secondary">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
}
